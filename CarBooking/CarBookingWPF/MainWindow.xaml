<Window x:Class="CarBookingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarBookingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <!-- dockpanel is also possible -->
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content="List all Cars" MinWidth="100" Click="Button_Click" />
            <Button Content="Book a Car" MinWidth="100" Margin="10 0 0 0" Click="Button_Click_1" />
        </StackPanel>

        <Frame x:Name="MainPage" Margin="0 55 0 0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
