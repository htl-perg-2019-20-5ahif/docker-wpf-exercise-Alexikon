<Window x:Class="CarBookingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarBookingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Cars}" Name="CarGrid" CanUserAddRows="False" Margin="0 0 0 25">
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="50" Header="CarId" Binding="{Binding CarId}" />
                <DataGridTextColumn MinWidth="100" Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn MinWidth="100" Header="Brand" Binding="{Binding Brand}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Click="Button_Click">Book Car</Button>
    </StackPanel>
</Window>
